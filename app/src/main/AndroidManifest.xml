<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AlarmWars"
        tools:targetApi="31">

        <!-- ID 및 비밀번호 찾기 활동, 외부에서 접근 불가능 -->
        <activity
            android:name=".FindIdPwActivity"
            android:exported="false" />

        <!-- 로그인 활동, 앱의 메인 진입점으로 외부에서 접근 가능 -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EndAlarmActivity"
            android:exported="false" />
        <activity
            android:name=".MakeQuestionActivity"
            android:exported="false" />
        <activity
            android:name=".QuestionActivity"
            android:exported="false" />
        <activity
            android:name=".RingActivity"
            android:exported="false" />
        <activity
            android:name=".SolveQuestionActivity"
            android:exported="false" />
        <activity
            android:name=".WaitingQuestionActivity"
            android:exported="false" />
        <activity
            android:name=".updateTimeActivity"
            android:exported="false" />
        <activity
            android:name=".hostWaitActivity"
            android:exported="false" />
        <activity
            android:name=".HostClientWaitActivity"
            android:exported="false" />
        <activity
            android:name=".IntroActivity"
            android:exported="true">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity android:name=".MakeRoomActivity" />
        <activity android:name=".WaitActivity" />
        <activity android:name=".AlarmActivity" />
        <activity
            android:name=".RoomActivity"
            android:exported="false"
            android:label="@string/title_activity_room"
            android:theme="@style/Theme.AlarmWars" />

        <!-- 회원가입 활동, 앱 내부에서만 시작, 외부 접근 불가능 -->
        <activity
            android:name=".SignupActivity"
            android:exported="false" />

        <!-- 메인 활동, 외부 앱이나 단축키 등에서 시작 가능 -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <receiver
            android:name=".AlarmReceiver"
            android:enabled="true"
            android:exported="false"
            />
    </application>


</manifest>