<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <!-- 스크롤뷰 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <!-- 스크롤 뷰의 내용 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- 앱 이름 표시 -->
            <TextView android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="Alarm War"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-black"
                android:textFontWeight="600"/>

            <!-- 앱 아이콘 표시 -->
            <ImageView android:id="@+id/imgApp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@id/appName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:src="@drawable/app_icon"
                android:background="@drawable/round_background_border"
                android:clipToOutline="true" />

            <!-- 아이디 입력 필드 -->
            <EditText android:id="@+id/etUserId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgApp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:hint="아이디(E-mail)"
                android:textStyle="bold"
                android:inputType="textEmailAddress"
                android:background="@drawable/edit_text_rectangular_background" />

            <!-- 비밀번호 입력 필드와 보이기/숨기기 버튼 -->
            <LinearLayout android:id="@+id/password_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etUserId"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal"
                android:background="@drawable/edit_text_rectangular_background"
                android:gravity="center_vertical">

                <EditText android:id="@+id/et_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:hint="비밀번호"
                    android:textStyle="bold"
                    android:inputType="textPassword"
                    android:background="@null" />

                <ImageButton android:id="@+id/btn_toggle_password"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_eye_off"
                    android:background="@null"
                    android:scaleType="centerInside" />
            </LinearLayout>

            <!-- 로그인 버튼 -->
            <Button android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/password_container"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="로그인"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />

            <!-- 로그인 액션 구분선 -->
            <View android:id="@+id/separatorActions"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/btnLogin"
                android:layout_marginTop="20dp"
                android:background="#DDDDDD" />

            <!-- 추가 액션 영역 (ID/PW 찾기, 회원가입) -->
            <LinearLayout android:id="@+id/llActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/separatorActions"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView android:id="@+id/btnFindIdPw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/find_idPw"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:layout_marginRight="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onFindIdClicked" />

                <View android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="#DDDDDD" />

                <TextView android:id="@+id/btnSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:layout_marginLeft="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onSignUpClicked" />
            </LinearLayout>

            <!-- 간편 로그인 영역 -->
            <LinearLayout android:id="@+id/dividerLoginActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llActions"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center">

                <View android:id="@+id/separatorActionsLeft"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="5"
                    android:background="#DDDDDD" />

                <TextView android:id="@+id/tvSimpleLogin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text=" 간편 로그인 "
                    android:gravity="center" />

                <View android:id="@+id/separatorActionsRight"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="5"
                    android:background="#DDDDDD"/>
            </LinearLayout>

            <!-- 소셜 미디어 로그인 옵션 -->
            <LinearLayout android:id="@+id/llSocialMediaLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dividerLoginActions"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.gms.common.SignInButton
                    android:id="@+id/Glogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/google_icon"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onFindIdClicked" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <!-- 화면 하단에 고정될 이미지 -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/green_grass"
        android:background="#00ffffff"/>
</RelativeLayout>
