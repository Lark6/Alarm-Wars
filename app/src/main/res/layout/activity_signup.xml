<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <!-- 전체 수직 레이아웃 설정 -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:background="@color/white">

        <!-- 회원가입 제목 설정 -->
        <TextView android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:text="회원가입"
            android:textSize="50sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"
            android:textFontWeight="600"/>

        <!-- 필수 입력 정보 안내 메시지 -->
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_marginBottom="8dp">

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/googleRed"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 필수 입력 정보입니다"
                android:textColor="@color/black"/>
        </LinearLayout>

        <!-- 이름 입력 필드 설정 -->
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView android:id="@+id/tv_name_required"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/et_name"
                android:layout_alignBottom="@id/et_name"
                android:layout_marginEnd="8dp"
                android:text="*"
                android:textColor="@color/googleRed" />

            <EditText android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv_name_required"
                android:background="@drawable/edit_text_rectangular_background"
                android:hint="이름(실명)"
                android:inputType="text"
                android:padding="12dp" />
        </RelativeLayout>

        <!-- 아이디 입력 필드 설정 -->
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView android:id="@+id/tv_id_required"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/et_id"
                android:layout_alignBottom="@id/et_id"
                android:layout_marginEnd="8dp"
                android:text="*"
                android:textColor="@color/googleRed" />

            <EditText android:id="@+id/et_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv_id_required"
                android:background="@drawable/edit_text_rectangular_background"
                android:hint="아이디(이메일)"
                android:inputType="textEmailAddress"
                android:padding="12dp"/>
        </RelativeLayout>

        <!-- 비밀번호 입력 필드와 보이기/숨기기 버튼 설정 -->
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView android:id="@+id/tv_password_required"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:text="*"
                android:textColor="@color/googleRed" />

            <LinearLayout android:id="@+id/password_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv_password_required"
                android:orientation="horizontal"
                android:background="@drawable/edit_text_rectangular_background"
                android:gravity="center_vertical">

                <EditText android:id="@+id/et_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="비밀번호(8-16자 영문, 숫자, 특수기호)"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:background="@null"/>

                <ImageButton android:id="@+id/btn_toggle_password"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@null"
                    android:src="@drawable/ic_eye_off"
                    android:scaleType="centerInside"/>
            </LinearLayout>
        </RelativeLayout>

        <!-- 회원가입 버튼 -->
        <Button android:id="@+id/btn_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:padding="12dp"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
</ScrollView>
