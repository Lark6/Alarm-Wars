<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 아이디/비밀번호 찾기 관련 입력 항목을 포함하는 레이아웃 -->
    <LinearLayout android:id="@+id/fragmentIdPw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 이름 입력 필드 -->
        <EditText android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이름"
            android:inputType="text"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:background="@drawable/edit_text_rectangular_background"/>

        <!-- 휴대폰 번호 입력 섹션 -->
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <!-- 휴대폰 번호 입력 필드 -->
            <EditText android:id="@+id/phone_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="휴대폰 번호(- 제외)"
                android:inputType="phone"
                android:background="@drawable/edit_text_rectangular_background"
                android:padding="12dp"/>

            <!-- 인증번호 전송 버튼 -->
            <Button android:id="@+id/btn_send_verification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인증번호"
                android:layout_marginStart="8dp"
                android:padding="12dp"/>
        </LinearLayout>

        <!-- 인증번호 입력 및 버튼 컨테이너 -->
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <!-- 인증번호 입력 필드 -->
            <RelativeLayout android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginEnd="8dp">

                <EditText android:id="@+id/et_verification_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="인증번호 입력"
                    android:inputType="number"
                    android:background="@drawable/edit_text_rectangular_background"
                    android:layout_marginTop="8dp"
                    android:padding="12dp"/>
            </RelativeLayout>

            <!-- 인증 확인 버튼 -->
            <Button android:id="@+id/btn_verify"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="확인"
                android:layout_marginTop="8dp"
                android:padding="12dp"/>

            <!-- 인증번호 재전송 버튼 -->
            <Button android:id="@+id/btn_resend_verification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="재전송"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:padding="12dp"/>
        </LinearLayout>

        <!-- 다음 단계로 넘어가는 버튼 -->
        <Button android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="다음"
            android:padding="12dp"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
</LinearLayout>
