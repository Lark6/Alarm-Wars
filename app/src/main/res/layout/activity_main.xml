<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alarm War"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:textSize="30sp"
            android:fontFamily="sans-serif-black"
            android:fontStyle="normal"
            android:fontWeight="700"
            android:textColor="@color/black" />

        <ImageView
            android:background="@drawable/round_background_border"
            android:clipToOutline="true"
            android:id="@+id/imgApp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/app_icon"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/appName"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/etUserId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="아이디"
            android:shape="rectangle"
            android:layout_below="@id/imgApp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/edit_text_rectangular_background"/>

        <LinearLayout
            android:id="@+id/password_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etUserId"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            android:background="@drawable/edit_text_rectangular_background"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="비밀번호"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:inputType="textPassword"
                android:background="@null"/>

            <ImageButton
                android:id="@+id/btn_toggle_password"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@null"
                android:src="@drawable/ic_eye_off"
                android:scaleType="centerInside"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:radius="10dp"
            android:layout_below="@id/password_container"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />


        <View
            android:id="@+id/separatorActions"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_below="@id/btnLogin"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:id="@+id/llActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/separatorActions"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/btnFindIdPw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/find_idPw"
                android:textAppearance="?attr/textAppearanceListItem"
                android:layout_marginRight="20dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onFindIdClicked" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#DDDDDD" />

            <TextView
                android:id="@+id/btnSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_up"
                android:textAppearance="?attr/textAppearanceListItem"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onSignUpClicked" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/dividerLoginActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/llActions"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <View
                android:id="@+id/separatorActionsLeft"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_weight="5" />

            <TextView
                android:id="@+id/tvSimpleLogin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=" 간편 로그인 "
                android:gravity="center"
                android:layout_weight="3" />

            <View
                android:id="@+id/separatorActionsRight"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_weight="5"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSocialMediaLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/dividerLoginActions"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgGoogle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/google_icon"
                android:layout_marginRight="64dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onFindIdClicked"/>

            <ImageView
                android:id="@+id/imgNaver"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/naver_icon"
                android:layout_marginRight="64dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onFindIdClicked"/>

            <ImageView
                android:id="@+id/imgKakaotalk"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/kakaotalk_icon"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onFindIdClicked"/>
        </LinearLayout>

    </RelativeLayout>

</ScrollView>


