<resources>
    <!-- Deep Blue Night Theme -->
    <style name="Base.Theme.AlarmWars.Night.DeepBlue" parent="Base.Theme.AlarmWars">
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/darker_blue</item>
        <item name="colorOnPrimary">@color/light_gray</item>

        <item name="colorSecondary">@color/gray_blue</item>
        <item name="colorSecondaryVariant">@color/dark_gray_blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor">@color/darker_blue</item>
        <item name="android:windowBackground">@color/very_dark_blue</item>
    </style>

    <!-- 사용할 다크 테마 선택: Deep Blue -->
    <style name="Theme.AlarmWars.Night" parent="Base.Theme.AlarmWars.Night.DeepBlue" />

    <!-- Warm Gray Night Theme -->
    <style name="Base.Theme.AlarmWars.Night.WarmGray" parent="Base.Theme.AlarmWars">
        <item name="colorPrimary">@color/warm_gray</item>
        <item name="colorPrimaryVariant">@color/darker_warm_gray</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/soft_orange</item>
        <item name="colorSecondaryVariant">@color/darker_soft_orange</item>
        <item name="colorOnSecondary">@color/dark_gray</item>

        <item name="android:statusBarColor">@color/darker_warm_gray</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <!-- Cool Grey Night Theme -->
    <style name="Base.Theme.AlarmWars.Night.CoolGrey" parent="Base.Theme.AlarmWars">
        <item name="colorPrimary">@color/cool_gray</item>
        <item name="colorPrimaryVariant">@color/darker_cool_gray</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/soft_teal</item>
        <item name="colorSecondaryVariant">@color/darker_soft_teal</item>
        <item name="colorOnSecondary">@color/off_white</item>

        <item name="android:statusBarColor">@color/darker_cool_gray</item>
        <item name="android:windowBackground">@color/very_dark_gray</item>
    </style>
</resources>
